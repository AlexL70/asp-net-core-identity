@model SignInViewModel

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> signInManager

@{
    ViewData["Title"] = "Sign in";

    var providersAvailable = await signInManager.GetExternalAuthenticationSchemesAsync();
}

<h1>Sign in</h1>

<form asp-controller="Identity" asp-action="SignIn" method="post">
    @Html.ValidationSummary()

    <div class="form-group col-4">
        <label asp-for="Username"></label>
        <input type="email" asp-for="Username" value="" class="form-control"/>
    </div>

    <div class="form-group col-4">
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" value="" class="form-control"/>
    </div>

    <div class="form-group col-4">
        Remember me
        <input type="checkbox" asp-for="RememberMe" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Sign in</button>
</form>

<p>You can use your social media account instead.</p>
<br /> <br />

<form asp-controller="Identity" asp-action="ExternalLogin" method="post">
    <div class="form-group">
        @foreach (var provider in providersAvailable)
        {
            <button type="submit" name="provider" value="@provider.Name" class="btn btn-primary">
              Login with @provider.DisplayName
            </button>
        }
    </div>
</form>