@model SignUpViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var roles = new List<string> { "Member", "Admin" };
    var departments = new List<string> { "IT", "Administrative", "Accounting" };
}

<h1>SignUp</h1>

<form asp-controller="Identity" asp-action="SignUp" method="post">
    @Html.ValidationSummary()

    <div class="form-group col-4">
        <label asp-for="Email">Email:</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Password">Password:</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group col-4">
        <label asp-for="Department"></label>
        @Html.DropDownListFor(_ => _.Department, departments.Select(_ => new SelectListItem { Text = _, Value = _ }))
    </div>

    <div class="form-group col-4">
        <label asp-for="Role"></label>
        @Html.DropDownListFor(_ => _.Role, roles.Select(_ => new SelectListItem { Text = _, Value = _ }))
    </div>

    <button class="btn btn-primary" type="submit">Sign up</button>
</form>

<div class="alert alert-info">
    If you already have an account please <a asp-action="SignIn">sign in</a>!
</div>